    "version": "0.2.0",
    "envFile": "${workspaceFolder}/.env",
    "configurations": [
        {
            "name": "SDF",
            "type": "python",
            "request": "launch",
            "program": "data/zinc/prepare_sdf.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--sdf_path",
                "data/rna/1A9N.sdf",
                "--output_path",
                "data/rna/out.csv",
                "--verbose",
                "--no_filters"
            ] 
        },
        {
            "name": "Train",
            "type": "python",
            "request": "launch",
            "program": "train_difflinker.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--config",
                "configs/rna_difflinker.yml",
                "--n_epochs",
                "1"
            ]
        },
        {
            "name": "Sample",
            "type": "python",
            "request": "launch",
            "program": "sample.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--checkpoint",
                "models/rna_difflinker.ckpt",
                "--samples",
                "samples",
                "--data",
                "datasets",
                "--prefix",
                "rna_v1_train",
                "--n_samples",
                "2",
                "--device",
                "cuda:0",
            ]
        }
    ]
}